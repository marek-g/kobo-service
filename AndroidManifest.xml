<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kobo_rotate_touch"
          android:versionCode="1"
          android:versionName="1.1">

    <uses-sdk android:minSdkVersion="10"/>

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application android:name=".KoboRotateTouchApplication"
                 android:label="@string/app_name"
                 android:icon="@drawable/app_icon">
        <activity android:name=".KoboRotateTouchActivity"
                  android:label="@string/app_name"
                  android:theme="@android:style/Theme.Dialog">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <receiver android:name=".ConfigurationBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".KoboRotateTouchService" />

    </application>

</manifest>
